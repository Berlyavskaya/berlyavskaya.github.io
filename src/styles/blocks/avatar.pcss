.avatar {
  display: block;
  width: 200px;
  height: 200px;
  overflow: hidden;
  border-radius: 50%;
}

.avatar__pic {
  display: block;
  object-fit: cover;
  width: 100%;
  height: 100%;
}
.avatar--card-person {
  width: 75px;
  height: 75px;
    @include phones {
      width: 50px;
      height: 50px;
  }
}