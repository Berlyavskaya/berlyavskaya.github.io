.hero {
    height: 80vh;
    @include phones {
      margin-bottom: 0;
      height: 75vh;
    }
}

.hero__container {
    display: flex;
    height: 100%;
    flex-direction: column;
}
.hero__header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.hero__menu {
  margin: 0 20px;
  @include tablets {
    display: none;
  }
}
.hero__links {
  @include phones {
    display: none;
  }
}

.hero__header {
  padding-top: 40px;
}

.hero__content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  @include tablets {
    align-items: flex-start;
    margin-top: 7%;
  }
}
.hero__btns {
  display: flex;
  justify-content: center;
  @include tablets {
    display: none;
  }
}
.scroll-down-btns {
  position: relative;
  padding: 0;
  border: none;
  font: inherit;
  color: inherit;
  background-color: transparent;
  display: flex;
  justify-content: center;
  padding: 0;
  padding-right: 30px;

}
.scroll-down-btns::before {
  content: '';
  position: absolute;
  top: 0;
  left: 60px;
  width: 19px;
  height: 30px;
  background: svg-load('scroll.svg', fill=#ffffff, width=100%, height=100%);
  background-repeat: no-repeat;
}