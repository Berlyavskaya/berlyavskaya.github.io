.form {    
    max-width: 880px;
}
.form__elem {
    display: flex; 
    flex-direction: column;
    justify-content: center;
    justify-content: space-between;
    flex-wrap: wrap; 
    /* background-color: red; */
}
.form__row {    
    display: flex;
    justify-content: space-between;    
    flex-wrap: nowrap;
    margin-bottom: 40px;
    @include phones {
        flex-wrap: wrap;
    }
}
.form__row--textarea{
    position: relative;
    flex-direction: column;
    height: 100%;
}
.form__row:last-child {
    margin-bottom: 0;
}
.form__block {
    display: flex;
    flex-direction: column;
    height: 80px;
    width: 45%;
    position: relative;
    border-bottom: 2px solid #fff;  
    @include phones {
        width: 90%;
        margin-bottom: 50px;
        
    }  
}
.form__block-title, .form__row--textarea {
    font-size: 18px;
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    line-height: 2;
    color: rgba(255, 255, 255, 0.3);
    @include phones {
        width: 100%;
        font-size: 14px;
        font-weight: 600;
        text-align: center;
    }  
}
.form__input {
    border: none;    
    align-self: flex-end;
    padding: 0px;
    height: 100%;
    width: 90%;
    box-sizing: border-box;
    color: #fff;
    align-self: flex-end;
    background: transparent;
    font-size: 18px;
    font-weight: bold;
    font-style: normal;
    line-height: 2;
    @include phones {
        width: 85%;
    }  
}
.form__input--textarea {
    resize: vertical;
    height: 72px; 
    width: 100%;
    border-bottom: 2px solid #fff;   
    padding-left: 5%; 
    background: transparent; 
    @include phones {
        padding-left: 12%;
    }   
}
.icon__form {
    width: 30px;
    height: 30px;
    position: absolute;
    bottom: 10px;
    left: 0;
    fill: #fff;
    opacity: 0.3;
}

.icon__form--textarea {
    width: 30px;
    height: 30px;
    position: absolute;
    bottom: 30px;
    left: 0;
    fill: #fff;
    opacity: 0.3;
}
.form__row--btn {
    @include tablets {
        justify-content: center;
      } 
}