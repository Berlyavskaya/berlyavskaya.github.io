script(type="text/x-template")#slider-container
    .wrappwer-works
        display(
            :works="works",
            :current-work="currentWork",
            :current-index="currentIndex"
            @slide="handleSlide"
        )
        info(
            :currentWork="currentWork"
        )       

script(type="text/x-template")#slider-display        
    .works__left
        .slider(:data-slide="currentIndex + 1")
            img(:src="currentWork.photo").slider__fillpic
            preview(
                :works="works",
                :current-work="currentWork"
            )               
            btns(
                 @slide="direction => $emit('slide', direction)"
            )     

script(type="text/x-template")#slider-preview
    .slider__preview
        ul.previews
            li.previews__item(v-for="work in works" :key="work.id" 
            :class="{active__previews: currentWork.id === work.id }"
            )
                a.previews__link
                    img(:src="work.photo" alt="prev").previews

script(type="text/x-template")#slider-btns                                                           
    .slider__buttons
        .slider-button
            button(@click.prevent="$emit('slide', 'prev')").slider-buttons__item.slider-buttons__item--slide_prev 
            button(@click.prevent="$emit('slide', 'next')").slider-buttons__item.slider-buttons__item--slide_next

script(type="text/x-template")#slider-info 
    .works__right
        tags(:tags="tagsArray")        
        .works__text
            h3.works__title {{currentWork.title}}
            .works__desc-text
                p {{currentWork.desc}} 
            a(:href="currentWork.link").iconed-link Посмотреть сайт

script(type="text/x-template")#slider-tags                    
    .works__tags
        ul.tags(v-for="tag in tags")
            li.tags__item {{tag}}